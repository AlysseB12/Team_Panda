@model Hotel_Advisor.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel[0].Website)
            </th>
