@page
@model Hotel_Advisor.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hotel.ID" />
            <div class="form-group">
                <label asp-for="Hotel.CountryID" class="control-label">Country</label>
                <select asp-for="Hotel.CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                <span asp-validation-for="Hotel.CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Name" class="control-label"></label>
                <input asp-for="Hotel.Name" class="form-control" />
                <span asp-validation-for="Hotel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Description" class="control-label"></label>
                <input asp-for="Hotel.Description" class="form-control" />
                <span asp-validation-for="Hotel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Address" class="control-label"></label>
                <input asp-for="Hotel.Address" class="form-control" />
                <span asp-validation-for="Hotel.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.City" class="control-label"></label>
                <input asp-for="Hotel.City" class="form-control" />
                <span asp-validation-for="Hotel.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Website" class="control-label"></label>
                <input asp-for="Hotel.Website" class="form-control" />
                <span asp-validation-for="Hotel.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.CovidSafety" class="control-label"></label>
                <input asp-for="Hotel.CovidSafety" class="form-control" />
                <span asp-validation-for="Hotel.CovidSafety" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
