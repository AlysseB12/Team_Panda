@page
@model Hotel_Advisor.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Hotel</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Description)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Address), @Html.DisplayFor(model => model.Hotel.City), @Html.DisplayFor(model => model.Hotel.Country.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Hotel.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-page="./Index">Back</a>
    </form>
</div>
