@page
@model Hotel_Advisor.Pages.Map.ContinentsModel
@{
    ViewData["Title"] = this.Model.Continent.Name;
    var continentTag = this.Model.Continent.Name.ToLower().Replace(" ", "-");
}

@section Styles {
    <link rel="stylesheet" href="~/css/cssmap/cssmap-@{@continentTag}.css" asp-append-version="true" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/cssmap/jquery.cssmap.min.js"></script>
    <script type="text/javascript">$(document).ready(() => $("#map-@continentTag").CSSMap({ "size": 430, "mapStyle": "blue" }));</script>
}

<div id="map-@continentTag">
    <ul class="@continentTag">
        @foreach (var country in this.Model.Countries) {
            <li class="sam@{@country.ID}"><a href="/Map/@this.Model.Continent.ID/@country.ID">@country.Name</a></li>
        }
    </ul>
</div>